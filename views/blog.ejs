<% include partials/head %>

<div class="container">
    <div class="row">
        <main class="col-md-9">

            <% for(var i = 0; i < posts.length; i++){ %>
            <div class="card">
                <div class="card-body">
                    <h3><a href="/post/<%= posts[i].permalink %>"><%= posts[i].title %></a></h3>
                    <h6 class="card-subtitle mb-2 text-muted"><%= posts[i].date %></h6>
                    <p class="card-text"><%- posts[i].postContent %></p>
                </div>
            </div>
            <% } %>
        </main>

        <% include partials/aside %>
    </div>
</div>

<% include partials/foot %>